<mvc:View
    controllerName="project1.controller.ProductsView2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page
        id="page2"
        title="Products">
        <VBox
            justifyContent="Center"
            alignItems="Center">
            <Panel class="panelBg">
                <VBox>
                    <Title
                        text="All products, with filtering by category"
                        class="sapUiSmallMarginTop center-title heading" />
                    <Select
                        change="onCategoryChange"
                        items="{/Categories}"
                        width="20%"
                        class="Select">
                        <core:Item
                            class="selectItems"
                            key="{CategoryId}"
                            text="{CategoryName}" />
                    </Select>
                    <Table
                        id="productTable"
                        inset="true"
                        items="{/Products}"
                        itemPress="onProductSelect">
                        <columns>
                            <Column>
                                <Text text="ID" class="tableHead" />
                            </Column>
                            <Column>
                                <Text text="Name" class="tableHead" />
                            </Column>
                            <Column>
                                <Text text="Unit Price" class="tableHead" />
                            </Column>
                            <Column>
                                <Text text="Stock" class="tableHead" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem type="Navigation">
                                <cells>
                                    <Text text="{ProductID}" class="tableData"/>
                                    <Text text="{ProductName}" class="tableData"/>
                                    <Text text="{UnitPrice}" class="tableData"/>
                                    <Text text="{UnitsInStock}" class="tableData"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </Panel>
        </VBox>
    </Page>
</mvc:View>